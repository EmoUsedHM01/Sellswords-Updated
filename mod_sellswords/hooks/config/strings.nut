::Const.Strings.PerkDescription.LegendSmashingShields = "\'If you can\'t get around it, try smashing through. It works!\'\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Abilities targeting Shields do [color=" + ::Const.UI.Color.PositiveValue + "]100%[/color] increased damage.\n\n• If a Shield is destroyed by [color=" + ::Const.UI.Color.Skill + "]Split Shield[/color], recover [color=" + ::Const.UI.Color.PositiveValue + "]4[/color] Action Points and [color=" + ::Const.UI.Color.PositiveValue + "]50%[/color] of the Fatigue cost.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendSmashingShields].Tooltip = ::Const.Strings.PerkDescription.LegendSmashingShields;

::Const.Strings.PerkDescription.LegendSmackdown = "Use your size and strength to bully your way into a prime position.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Active:[/u][/color]\n• Unlocks the [color=" + ::Const.UI.Color.Skill + "]Wind Up[/color] skill which prepares your next attack to [color=" + ::Const.UI.Color.Status + "]Knock Back[/color], [color=" + ::Const.UI.Color.Status + "]Baffle[/color], and [color=" + ::Const.UI.Color.Status + "]Stagger[/color] your target on hit.\n\n• Additionally, on hit, reduce targets AP by [color=" + ::Const.UI.Color.NegativeValue + "]2[/color] for two turns.\n\n• Costs [color=" + this.Const.UI.Color.NegativeValue + "]2[/color] AP and [color=" + this.Const.UI.Color.NegativeValue + "]10[/color] Fatigue.\n\n• AP cost is reduced to [color=" + ::Const.UI.Color.NegativeValue + "]1[/color] if wielding a Two-Handed Melee weapon.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendSmackdown].Tooltip = ::Const.Strings.PerkDescription.LegendSmackdown;

if (::Is_PTR_Exist)
{
	::Const.Strings.PerkDescription.LegendSpecStaffStun = "Master the movements required to spin your staff in a great flourish so that it lands with additional force.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Any strike with a Staff or Sling-Staff that would normally [color=" + ::Const.UI.Color.Status + "]Daze[/color], also [color=" + ::Const.UI.Color.Status + "]Stuns[/color] and [color=" + ::Const.UI.Color.Status + "]Staggers[/color]. This does not apply to AoE attacks.\n\n• Staff Sweep now applies [color=" + ::Const.UI.Color.Status + "]Dazed[/color].\n\n• [color=" + ::Const.UI.Color.Skill + "]Whack a\' Smack[/color] gains [color=" + ::Const.UI.Color.PositiveValue + "]+10%[/color] chance to hit.";
}
else
{
	::Const.Strings.PerkDescription.LegendSpecStaffStun = "Master the movements required to spin your staff in a great flourish so that it lands with additional force.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Any strike with a Staff or Sling-Staff that would normally [color=" + ::Const.UI.Color.Status + "]Daze[/color], also [color=" + ::Const.UI.Color.Status + "]Stuns[/color] and [color=" + ::Const.UI.Color.Status + "]Staggers[/color]. This does not apply to AoE attacks.\n\n• Staff Sweep now applies [color=" + ::Const.UI.Color.Status + "]Dazed[/color].";
}
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendSpecStaffStun].Tooltip = ::Const.Strings.PerkDescription.LegendSpecStaffStun;

::Const.Strings.PerkDescription.LegendTumble = "Make use of your acrobatic skill to improve your movements.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Reduces the Fatigue Cost of [color=" + ::Const.UI.Color.Skill + "]Lunge[/color], [color=" + ::Const.UI.Color.Skill + "]Unarmed Lunge[/color], [color=" + ::Const.UI.Color.Skill + "]Footwork[/color], [color=" + ::Const.UI.Color.Skill + "]Leap[/color], [color=" + ::Const.UI.Color.Skill + "]Sprint[/color], [color=" + ::Const.UI.Color.Skill + "]Evasion[/color], and [color=" + ::Const.UI.Color.Skill + "]Audacious Charge[/color] by [color=" + ::Const.UI.Color.NegativeValue + "]50%[/color].\n\n• The Action Point cost of all these skills, except [color=" + ::Const.UI.Color.Skill + "]Lunge[/color], is reduced by [color=" + ::Const.UI.Color.NegativeValue + "]1[/color] and that of [color=" + ::Const.UI.Color.Skill + "]Leap[/color] is reduced by [color=" + ::Const.UI.Color.NegativeValue + "]3[/color].\n\n• This is an upgraded version of [color=" + ::Const.UI.Color.Perk + "]Furinkazan[/color] and is not stackable.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendTumble].Tooltip = ::Const.Strings.PerkDescription.LegendTumble;

::Const.Strings.PerkDescription.LastStand = "\'This is the hill that you will NOT die on!\'\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Gain [color=" + ::Const.UI.Color.PositiveValue + "]+1[/color] additional Melee and Ranged Defense for every [color=" + ::Const.UI.Color.NegativeValue + "]2%[/color] of missing Hitpoints below [color=" + ::Const.UI.Color.NegativeValue + "]66%[/color]\n\n• Gain [color=" + ::Const.UI.Color.PositiveValue + "]+1[/color] additional Action Points for every [color=" + ::Const.UI.Color.NegativeValue + "]20%[/color] of missing Hitpoints.\n\n• When below [color=" + ::Const.UI.Color.NegativeValue + "]44%[/color] Hitpoints this character becomes immune to the effects of subsequent injuries, and moral is no longer affected by health loss."
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LastStand].Tooltip = ::Const.Strings.PerkDescription.LastStand;

::Const.Strings.PerkDescription.Indomitable = "\'Mountains cannot be moved, nor taken down!\'\n\n[color=" + ::Const.UI.Color.Passive + "][u]Active:[/u][/color]\n• Unlocks the [color=" + ::Const.UI.Color.Skill + "]Indomitable[/color] skill which grants a [color=" + ::Const.UI.Color.NegativeValue + "]50%[/color] damage reduction, as well as immunity to being [color=" + ::Const.UI.Color.Status + "]Stunned[/color], [color=" + ::Const.UI.Color.Status + "]Knocked Back[/color], [color=" + ::Const.UI.Color.Status + "]Grabbed[/color], or [color=" + ::Const.UI.Color.Status + "]Swallowed[/color] for one turn.\n\n• Base Resolve is [color=" + ::Const.UI.Color.PositiveValue + "]doubled[/color] until the effect ends.\n• Costs [color=" + ::Const.UI.Color.NegativeValue + "]5[/color] AP and [color=" + ::Const.UI.Color.NegativeValue + "]25[/color] Fatigue.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.Indomitable].Tooltip = ::Const.Strings.PerkDescription.Indomitable;

::Const.Strings.PerkDescription.LegendTwirl = "Practice in physical movement with a partner has given the ability to take the lead and move someone\'s body in a twirling movement.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n • The [color=" + ::Const.UI.Color.Skill + "]Rotation[/color] skill can now target enemies as well as allies. If you don't have [color=" + ::Const.UI.Color.Perk + "]Rotation[/color], taking this perk will grant you it for as long as you have this perk.\n\n• Picking the perk will also add [color=" + ::Const.UI.Color.Perk + "]Furinkazan[/color] to your perk map, which reduces the cost of [color=" + ::Const.UI.Color.Skill + "]Rotation[/color].\n\n• Costs [color=" + this.Const.UI.Color.NegativeValue + "]3[/color] AP and [color=" + this.Const.UI.Color.NegativeValue + "]25[/color] Fatigue.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendTwirl].Tooltip = ::Const.Strings.PerkDescription.LegendTwirl;

::Const.Strings.PerkDescription.QuickHands = "Looking for this?\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Swapping an item in battle becomes a free action with no Action Point cost, once every turn.\n\n• Does not work when swapping a Shield or between Two-Handed Melee Weapons.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.QuickHands].Tooltip = ::Const.Strings.PerkDescription.QuickHands;

::Const.Strings.PerkDescription.LegendMuscularity = "[color=" + ::Const.UI.Color.NegativeValue + "][u]Requires:[/u] Melee or Throwing Weapon Attack[/color]\nPut your full weight into every blow!\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Gain additional Minimum and Maximum Damage based on your current Hitpoints. \n\n• The bonus is [color=" + ::Const.UI.Color.PositiveValue + "]1.5%[/color] of your current Hitpoints per AP for attacks with a base Action Point cost of 5 or less, and [color=" + ::Const.UI.Color.PositiveValue + "]2%[/color] per AP for attacks with a base Action Point cost of 6 or more.\n\n• The factor is reduced to [color=" + ::Const.UI.Color.NegativeValue + "]60%[/color] for weapons that have a range of more than one tile and [color=" + ::Const.UI.Color.NegativeValue + "]80%[/color] for Daggers and Goblin Swords.\n\n• The bonus damage cannot be higher than [color=" + ::Const.UI.Color.PositiveValue + "]50[/color].";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendMuscularity].Tooltip = ::Const.Strings.PerkDescription.LegendMuscularity;

::Const.Strings.PerkDescription.Overwhelm = "Learn to take advantage of your initiative and prevent the enemy from attacking effectively by overwhelming them with your attacks!\n\n[color=" + ::Const.UI.Color.Passive + "][u]Active/Passive:[/u][/color]\n• With every attack, hit or miss, against an opponent that acts after you in the current round, inflict [color=" + ::Const.UI.Color.Status + "]Overwhelmed[/color] which lowers both Melee and Ranged Skill by [color=" + ::Const.UI.Color.NegativeValue + "]-10%[/color] for one turn.\n\n• The effect stacks with each attack, up to a maximum of 7 times, and can be applied to multiple targets at once with a single attack.\n\n• Additionally, unlocks the [color=" + ::Const.UI.Color.Skill + "]Quick Feint[/color] skill which allows you to apply [color=" + ::Const.UI.Color.Status + "]Overwhelmed[/color] to 4 adjacent targets, and can be used every other turn.\n\n• Costs [color=" + ::Const.UI.Color.NegativeValue + "]1[/color] AP and [color=" + ::Const.UI.Color.NegativeValue + "]5[/color] Fatigue. ";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.Overwhelm].Tooltip = ::Const.Strings.PerkDescription.Overwhelm;

::Const.Strings.PerkDescription.LegendBattleheart = "Wade into the thick of battle, dodging blades from behind and above, aware of all around you at the heart of the battle.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Being surrounded no longer affects this character\'s Defenses at all.\n\n• Upgraded version of [color=" + ::Const.UI.Color.Perk + "]Underdog[/color], immune to [color=" + ::Const.UI.Color.Perk + "]Backstabber[/color].\n\n• Also prevents moral checks upon enemies entering your Zone of Control.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendBattleheart].Tooltip = ::Const.Strings.PerkDescription.LegendBattleheart;

::Const.Strings.PerkDescription.Underdog = "I\'m used to it.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• The defense malus due to being surrounded by opponents is reduced by [color=" + ::Const.UI.Color.NegativeValue + "]5[/color].\n\n• If an attacker has the [color=" + ::Const.UI.Color.Perk + "]Backstabber[/color] perk, the effect of that perk is negated, and the normal defense malus due to being surrounded is applied instead.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.Underdog].Tooltip = ::Const.Strings.PerkDescription.Underdog;

::Const.Strings.PerkDescription.SunderingStrikes = "Learn how to strike best at your targets\' Armor to destroy it as fast as possible.\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Effectiveness against Armor is increased by [color=" + ::Const.UI.Color.PositiveValue + "]20%[/color] of your weapon\'s Armor effectiveness.\n\n• The bonus is increased to [color=" + ::Const.UI.Color.PositiveValue + "]30%[/color] for Two-Handed Weapons.\n\n• When unarmed, effectiveness against Armor is increased by [color=" + ::Const.UI.Color.PositiveValue + "]20%[/color].";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.SunderingStrikes].Tooltip = ::Const.Strings.PerkDescription.SunderingStrikes;

::Const.Strings.PerkName.LegendFullForce = "Immovable Object";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendFullForce].Name = ::Const.Strings.PerkName.LegendFullForce;	
::Const.Strings.PerkDescription.LegendFullForce = "Put your full weight into every blow!\n\n[color=" + ::Const.UI.Color.Passive + "][u]Passive:[/u][/color]\n• Gain [color=" + ::Const.UI.Color.PositiveValue + "]+10%[/color] of the combined Fatigue modifier from body, head, main hand and off hand as additional melee Damage.\n\n• Additionally, gain a weakened [color=" + ::Const.UI.Color.Perk + "]Steadfast[/color] effect if the combined Fatigue modifier from body, head and off hand is [color=" + ::Const.UI.Color.PositiveValue + "]50[/color] or more.\n\n• This effect upgrades to the standard [color=" + ::Const.UI.Color.Perk + "]Steadfast[/color] once combined Fatigue is at [color=" + ::Const.UI.Color.PositiveValue + "]65[/color] or more.\n\n• Grants immunity to being [color=" + ::Const.UI.Color.Status + "]Stunned[/color] once the combined Fatigue modifier is at [color=" + ::Const.UI.Color.PositiveValue + "]80[/color] or more, stacking with the [color=" + ::Const.UI.Color.Perk + "]Steadfast[/color] effect.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendFullForce].Tooltip = ::Const.Strings.PerkDescription.LegendFullForce;

::Const.Strings.PerkName.Slaughterer = "Slaughterer";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.Slaughterer].Name = ::Const.Strings.PerkName.Slaughterer;
::Const.Strings.PerkDescription.Slaughterer = "A gruesome display, enemies are more likely to lose morale when they witness their allies get split in two.\n\n[color=#4f1800][u]Passive:[/u][/color]\n• Melee kills are always fatalities.\n\n• Fatalaties have a [color=" + this.Const.UI.Color.NegativeValue + "]-15[/color] penalty to enemy Resolve checks.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.Slaughterer].Tooltip = ::Const.Strings.PerkDescription.Slaughterer;	
	
::Const.Strings.PerkDescription.LegendCheerOn = "[color=" + this.Const.UI.Color.NegativeValue + "][u]Requires:[/u] Instrument or Banner[/color]\nUse your way with song to cheer on an ally!\n\n[color=#4f1800][u]Active:[/u][/color]\n• Unlocks the [color=" + ::Const.UI.Color.Skill + "]Cheer On[/color] skill which grants [color=" + ::Const.UI.Color.PositiveValue + "]+2[/color] Action Points to an adjacent ally.\n\n• Costs [color=" + ::Const.UI.Color.NegativeValue + "]3[/color] AP and [color=" + ::Const.UI.Color.NegativeValue + "]10[/color] Fatigue.";
::Const.Perks.PerkDefObjects[::Const.Perks.PerkDefs.LegendCheerOn].Tooltip = ::Const.Strings.PerkDescription.LegendCheerOn;

